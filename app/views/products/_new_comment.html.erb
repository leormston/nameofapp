<script src="jquery.raty.js"></script>

<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
  <div class="row">
    <div class="col-12 col-sm-2">
      <p>
        <%= f.label :rating %>
        <div class="rating"></div>
      </p>
    </div>
    <div class="col-12 col-sm-10">
      <p>
        <%= f.label :body, "Comments" %><br>
        <%= f.text_area :body %>
      </p>
      <p>
        <%= f.submit "Submit" %>
      </p>
    </div>
  </div>
  <hr>

  <% end %>
<% end %>
