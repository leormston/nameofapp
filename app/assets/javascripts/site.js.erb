$(document).on('turbolinks:load', function(){
  $('.rating').raty({
    scoreName: 'comment[rating]'
  });

  $('.rated').raty({
    starHalf: 'star-half.png',
    starOff: 'star-off.png',
    starOn: 'star-on.png',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
   $( '.star-rating' ).raty( 'reload' )
});
