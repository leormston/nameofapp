$(document).on('turbolinks:load', function(){
  $('.rating').raty({
    scoreName: 'comment[rating]'
  });

  $('.rated').raty({
    starHalf: '<%= image_url("star-half.png") %>',
    starOff: '<%= image_url("star-off.png") %>',
    starOn: '<%= image_url("star-on.png") %>',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
});
