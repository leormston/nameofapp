var refreshRating = function () {
  $('.rating').raty({
    scoreName: 'comment[rating]',
    starHalf: "<%= asset_path 'star-half.png', skip_pipeline: true %>",
    starOff: "<%= asset_path 'star-off.png', skip_pipeline: true%>",
    starOn: "<%= asset_path 'star-on.png', skip_pipeline: true %>"
  });

  $('.rated').raty({
    starHalf: "<%= asset_path 'star-half.png', skip_pipeline: true%>",
    starOff: "<%= asset_path 'star-off.png', skip_pipeline: true%>",
    starOn: "<%= asset_path 'star-on.png', skip_pipeline: true%>",
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
   $( '.star-rating' ).raty( 'reload' )
}

$(document).on('turbolinks:load ajaxSuccess', function(){
  refreshRating();

  $('#img-zoom').elevateZoom();

});
